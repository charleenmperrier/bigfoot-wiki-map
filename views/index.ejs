  <body>
    <h1>Hello World!</h1>

    <!-- map basic test -->

    <div id="map"></div>

    <script>
      let map = L.map('map').setView([0, 0], 1);

      L.tileLayer('https://api.maptiler.com/maps/streets/{z}/{x}/{y}.png?key=wpKyMC536a0ZlXqAX7iu', {
